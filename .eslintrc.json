{
    "env": {
        "commonjs": true,
        "es6": 2018,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ignorePatterns": ["node_modules/"],
    "rules": {
        "no-console": "off",
        "linebreak-style": "off",
        "indent": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-undef": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}